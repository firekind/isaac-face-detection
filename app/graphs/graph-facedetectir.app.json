{
    "name": "face_detection",
    "modules": [
        "@com_nvidia_isaac_sdk//packages/sight",
        "@com_nvidia_isaac_sdk//packages/deepstream",
        "@com_nvidia_isaac_sdk//packages/sensors:v4l2_camera",
        "@com_nvidia_isaac_sdk//packages/viewers"
    ],
    "graph": {
        "nodes": [
            {
                "name": "camera",
                "components": [
                    {
                        "name": "ledger",
                        "type": "isaac::alice::MessageLedger"
                    },
                    {
                        "name": "v4l2",
                        "type": "isaac::V4L2Camera"
                    }
                ]
            },
            {
                "name": "deepstream",
                "components": [
                    {
                        "name": "ledger",
                        "type": "isaac::alice::MessageLedger"
                    },
                    {
                        "name": "pipeline",
                        "type": "isaac::deepstream::Pipeline"
                    }
                ]
            },
            {
                "name": "viewer",
                "components": [
                    {
                        "name": "ledger",
                        "type": "isaac::alice::MessageLedger"
                    },
                    {
                        "name": "viewer",
                        "type": "isaac::viewers::ImageViewer"
                    }
                ]
            },
            {
                "name": "sight_widgets",
                "components": [
                    {
                        "name": "scene_viewer",
                        "type": "isaac::sight::SightWidget"
                    }
                ]
            }
        ],
        "edges": [
            {
                "source": "camera/v4l2/frame",
                "target": "deepstream/pipeline/input"
            },
            {
                "source": "deepstream/pipeline/output",
                "target": "viewer/viewer/image"
            }
        ]
    },
    "config": {
        "camera": {
            "v4l2": {
                "device_id": 2,
                "rows": 480,
                "cols": 640,
                "rate_hz": 30
            }
        },
        "deepstream": {
            "pipeline": {
                "pipeline": "appsrc name=input ! video/x-raw,format=RGB,framerate=30/1,width=640,height=480 ! videoconvert ! video/x-raw,format=RGBA ! nvvideoconvert nvbuf-memory-type=0 ! video/x-raw(memory:NVMM),format=RGBA ! mux.sink_0 nvstreammux name=mux width=640 height=480 batch-size=1 batched-push-timeout=4000000 nvbuf-memory-type=0 ! nvinfer config-file-path=app/configs/inference_config_facedetectir.txt ! nvdsosd ! nvvideoconvert nvbuf-memory-type=0 ! video/x-raw,format=RGBA ! videoconvert ! video/x-raw,format=RGB ! appsink name=output"
            }
        },
        "sight_widgets": {
            "scene_viewer": {
                "title": "Scene",
                "type": "2d",
                "channels": [
                    {
                        "name": "viewer/viewer/image"
                    }
                ]
            }
        },
        "websight": {
            "WebsightServer": {
                "webroot": "external/com_nvidia_isaac_sdk/packages/sight/webroot",
                "assetroot": "../isaac_assets",
                "port": 3000
            }
        }
    }
}