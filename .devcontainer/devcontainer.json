{
    "name": "isaac-application",
    "image": "firekind/isaac:2020.2",
    "runArgs": [
        "--runtime=nvidia",
        "--net=host"

        // add a device (eg: V4L2 camear)
        // "--device=/dev/video2"
    ],
    "mounts": [
        "source=isaac-sdk-build-cache,target=/root"
    ],
    "postCreateCommand": [
        "python3 -m pip install -r requirements.txt"
    ],
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
    ]
}